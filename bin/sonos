#!/usr/bin/python

import soco

def get_now_playing():
    for player in soco.discover():
        if player.player_name.lower() in ['eldh√∫s', 'elvis']:
            track_info = player.get_current_track_info()
            print('~ ' + track_info['artist'] + ' - ' + track_info['title'] + ' ~')
            break

if __name__ == '__main__':
    get_now_playing()
